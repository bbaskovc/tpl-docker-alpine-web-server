{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/var/www/localhost/htdocs": "${workspaceFolder}/www"
            },
            "log": true
        },
        {
            "name": "Launch currently open PHP file",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "port": 9003,
        }
    ]
}